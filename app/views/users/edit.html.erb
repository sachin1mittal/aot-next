<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Users</h3>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="min-height:600px;">
          <div class="x_title">
            <h2><%= @user.name.titleize %></h2>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <%= form_for @user, html: { class: 'form-horizontal form-label-left' } do |f| %>
              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">Roles<span class="required"></span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <%= f.select :role_ids, options_for_select(Role.all.map {|role| [role.label, role.id]}, @user.role_ids), {}, class: 'tags-multi-select', multiple: true, style: 'width: 100%' %>
                </div>
              </div>
              <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <button type="submit" class="btn btn-success">Update</button>
              </div>
            <% end %>
          </div>
          <div class="x_title">
            <h2>Devices</h2>
            <div class="clearfix"></div>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="x_panel">
              <div class="x_title">
                <h2>Owned Devices</h2>
                <div class="clearfix"></div>
              </div>
              <div class="x_content">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Added On</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%= render partial: 'device', collection: @user.owned_devices %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="x_panel">
              <div class="x_title">
                <h2>Shared Devices</h2>
                <div class="clearfix"></div>
              </div>
              <div class="x_content">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Added On</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%= render partial: 'device', collection: @user.shared_devices %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
