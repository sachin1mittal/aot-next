<%= form_for network, html: { class: "form-horizontal form-label-left input_mask" } do |f| %>
<!-- <form class="form-horizontal form-label-left"> -->
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Name <span class="required">*</span>
    </label>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.text_field :name, id: 'name', required: 'required', class: 'form-control col-md-7 col-xs-12' %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="password">Password<span class="required">*</span>
    </label>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.password_field :password, id: 'password', required: 'required', class: 'form-control col-md-7 col-xs-12', value: network.password %>
    </div>
  </div>
  <div class="form-group">
    <label for="description" class="control-label col-md-3 col-sm-3 col-xs-12">Description</label>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.text_area :description, id: 'description', class: 'form-control col-md-7 col-xs-12', maxlength: 100 %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
      <%= link_to 'cancel', networks_path, class: 'btn btn-primary' %>
      <button type="submit" class="btn btn-success">Submit</button>
    </div>
  </div>
<% end %>
<!-- </form> -->
